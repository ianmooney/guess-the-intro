<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @playlist.name %></h1>

      <ul class='tracks'>
        <% @playlist.tracks.each do |track| %>
          <li>
            <a href='#' data-track-id="<%= track.id %>"><%= track.name %></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
