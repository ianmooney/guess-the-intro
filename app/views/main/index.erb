<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% if spotify_user %>
        <% if @playlist %>
          <h1><%= @playlist.name %></h1>

          <ul class='tracks'>
            <% @playlist.tracks.each do |track| %>
              <li>
                <a href='#' data-track-id="<%= track.id %>"><%= track.name %></a>
              </li>
            <% end %>
          </ul>
        <% end %>
      <% else %>
        <%= link_to 'Sign in with Spotify', '/auth/spotify' %>
      <% end %>
    </div>
  </div>
</div>
